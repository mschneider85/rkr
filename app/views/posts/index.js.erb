$("<%=j render('posts', posts: @posts) %>")
  .appendTo($(".infinite-table"));

<% if @posts.last_page? %>
  $('.pagination')
    .html("No more posts.");
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@posts, 'Next Page', remote: true) %>");
<% end %>

$(document).trigger('turbolinks:load');
